                <button class="UIColorButton" style="background-color:#f8fc03;" onclick="BranchPageActionsController.changeContentionColor('#f8fc03')"> Text</button>
            </nobr>
            <br />
            <nobr>
                <button class="UIButton" onclick="BranchPageActionsController.addUrl()">Add Url</button>
