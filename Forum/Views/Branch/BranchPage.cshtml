                <button class="UIButton" onclick="BranchPageActionsController.addSelectedToArchive()">(archive)</button>
                <button class="UIButton" onclick="BranchPageActionsController.collapceSelectedContention()" style="background-color: #9b9bff;">свернуть</button>
