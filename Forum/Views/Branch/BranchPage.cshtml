                <button class="UIButton" onclick="BranchPageController.reload()">Reload</button>
                <button class="UIButton" onclick="BranchPageController.copy()">Copy</button>
                <button class="UIButton" onclick="BranchPageController.AccountPage()">Account</button>

                <button class="UIColorButton" style="background-color:#FFF;" onclick="BranchPageActionsController.changeContentionColor('#FFF')"> Text</button>
                <button class="UIColorButton" style="background-color:#fc03f0;" onclick="BranchPageActionsController.changeContentionColor('#fc03f0')"> Text</button>
                <button class="UIColorButton" style="background-color:#fc3503;" onclick="BranchPageActionsController.changeContentionColor('#fc3503')"> Text</button>
